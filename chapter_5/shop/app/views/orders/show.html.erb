<div class="page-header">
  <h1>订单：<%= @order.number %></h1>
</div>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th width="50%">商品</th>
        <th width="10%">大小</th>
        <th class="text-right" width="10%">价格</th>
        <th width="10%">数量</th>
        <th width="20%" class="text-right">合计</th>
      </tr>
    </thead>
    <% @order.line_items.each do |item| %>
      <tr>
        <td><%= item.variant.product.name %></td>
        <td><%= item.variant.size %></td>
        <td class="text-right"><%= item.variant.price %></td>
        <td><%= item.quantity %></td>
        <td class="text-right"><%= number_to_currency item.quantity * item.variant.price %></td>
      </tr>
    <% end %>
  </table>
  <div class="panel-footer">
    <%= link_to "支付该订单", pay_path(number: @order.number), method: :post, data: { confirm: "使用支付宝支付" }, class: "btn btn-info btn-block" %>
  </div>
</div>

